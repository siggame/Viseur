{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "lib": [ "dom", "es5", "es6", "esnext" ],

        "sourceMap": true,
        "removeComments": true,

        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,

        "outDir": "js",
        "baseUrl": "./",
        "paths": {
            //"~/*" : ["src/*"] // resolve any `~/foo/bar` to `<baseUrl>/src/foo/bar`
        }
    }
}
